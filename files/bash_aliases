# Recreate env
function recenv () {
    conda deactivate
    conda env remove -yn $1
    conda env create
    conda activate $1
    echo "Run:"
    echo "jupyter labextension install jupyterlab_vim @jupyterlab/toc @ryantam626/jupyterlab_code_formatter"
}
